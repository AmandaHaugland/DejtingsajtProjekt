@model IEnumerable<DejtingsajtProjekt.Models.FriendListViewModel>

@{
    ViewBag.Title = "FriendRequest";
}

<h2>FriendRequest</h2>

@foreach (var item in Model)
{


<a class=" list-group-item" href="/Profile/UserProfile/@item.UserId">
    @Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)
</a>
    <input type="button" value="Add friend" onclick="location.href='@Url.Action("AcceptFriend", "Profile", new { requestId = item.RequestId } )'" />
    <input type="button" value="Remove" onclick="location.href='@Url.Action("RemoveFriend", "Profile", new { requestId = item.RequestId } )'" />

}